
<div class="container">
  <div class="row">
    <% @videos.in_groups_of(3) do |group| %>
      <% group.each do |video| %>
        <div class="col-md-4">
          <div class="thumbnail">
            <% if video.song_present? %>
              <%= link_to song_path(video.song_id), class: 'video_link' do %>
                <% if video.thumb_present? %>
                  <%= image_tag("#{video.thumb_url}", height: '280', width: '320', alt: 'a video link') %>
                <% else %>
                  <%= image_tag("no_image.png", height: '280', width: '320', alt: 'an image placeholder') %>
                <% end %>
              <% end %>
            <% else %>
              <%= image_tag("#{video.thumb_url}", height: '280', width: '320', alt: 'a video thumbnail') %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="row">
    <div class="center">
      <div><%= will_paginate @videos, renderer: BootstrapPagination::Rails %></div>
    </div>
  </div>
</div>
