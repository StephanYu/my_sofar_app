<div class="container">
  <div class="row">
    <div class="col-md-8">
      <%= render 'embedded_video' %>
    </div>
    <div class="col-md-4">
      <div class="row">
        <h3 data-test-id="song_title"><%= @video_title %></h3>
      </div>
      <div class="row">
        <p data-test-id="video_published_at">
          Published: <%= @video_published_at %>
        </p>
        <%= render 'video_statistics' %>
        <%= render 'video_description' %>
      </div>
    </div>
  </div>
</div>